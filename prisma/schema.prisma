enum Status {
  Booked
  Completed
  Cancelled
}

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id String @id @default(uuid())
  username  String @unique
  password String
  bookings Booking[]
  createdAt DateTime @default(now())
}

/**
  id
  user_id
  car_name
  days
  rent_per_day
  status  // ('booked', 'completed', 'cancelled')
  created_at
*/


model Booking{
  id String @id @default(uuid())
  userId String
  carName String
  days Int
  rentPerDay Int
  status Status
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  
}